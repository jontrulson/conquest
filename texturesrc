texture {
  name         "shipF-ico-decal1"
  filename     "hud-decal1"

  color        "ffffffff"

  # shield gauge location
  texarea {
    name       "shieldg"
    x          77.0
    y          20.0
    w          121.0
    h          9.0
  }

  # shield charge gauge location
  texarea {
    name       "shchargeg"
    x          77.0
    y          50.0
    w          121.0
    h          2.0
  }

  # shield value (number) location
  texarea {
    name       "shieldn"
    x          208.0
    y          18.0
    w          38.0
    h          30.0
  }

  # damage gauge location
  texarea {
    name       "damageg"
    x          77.0
    y          221.0
    w          121.0
    h          9.0
  }

  # damage value (number) location
  texarea {
    name       "damagen"
    x          208.0
    y          215.0
    w          38.0
    h          30.0
  }

  # iconic ship location
  texarea {
    name       "icon"
    x          72.0
    y          66.0
    w          124.0
    h          124.0
  }

  ## "Cloaked" indicator position within "icon" area
  texarea {
    name       "icon-cloaked"
    x          104.0
    y          56.0
    w          84.0
    h          10.0
  }

  ## "Repairing" indicator position within "icon" area
  texarea {
    name       "icon-repairing"
    x          104.0
    y          56.0
    w          84.0
    h          10.0
  }

  ## "FA:%d" firing angle indicator position within "icon" area
  texarea {
    name       "icon-fangle"
    x          7.0
    y          190.0
    w          40.0
    h          10.0
  }

  ## "TA/D: %s:%d/%d" last Target, target Angle and target Distance 
  ##  indicator position within "icon" area
  texarea {
    name       "icon-tad"
    x          60.0
    y          190.0
    w          132.0
    h          10.0
  }

  # torp status
  texarea {
    name       "torps"
    x          204.0
    y          61.0
    w          19.0
    h          144.0
  }

  # phaser charge
  texarea {
    name       "phaserchrg"
    x          234.0
    y          61.0
    w          10.0
    h          144.0
  }
}

